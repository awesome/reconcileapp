<div class="box">
<% if current_user.groups.empty? %>
<div class="span8 offset2">
  <h2>You don't seem to be in any group.
  </h2>
  <%= link_to("Let's create one!", new_group_path, {:class => "btn btn-primary"} ) %>
</div>
<% else %>
<div class="row">
<div class="span2 offset8">
<a href="<%=new_group_path%>" class="btn btn-primary">
    <i class="icon-plus icon-white"></i>
    Create Group</a>
</div>
</div>
<hr/>
<div class="row">
<div class="span4 offset4">
<table class="table">
  <caption><h4>Your Groups</h4></caption>
  <tbody>
  <% current_user.groups.each do |g| %>
  <tr>
    <td class="group-name">
      <h3><%= link_to g.name, group_path(g) %></h3>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
</div>
</div>
</div>
