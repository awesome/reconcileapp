<div class="box">
  <%= form_for @group do |f| %>
  <div><%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div><%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div><%= f.label :members %>
    <%= f.text_area :users %>
  </div>

  <%= f.submit "Create", :class => "btn btn-primary" %>
  <% end %>
</div>
