<div class="span4 offset4">

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

<br/>
  <div><%= f.submit "Sign in", {:class => "btn btn-large btn-primary"} %></div>
<% end %>
<hr/>
 <%= link_to "Forgot your password?",
 new_password_path(resource_name), {:class => "btn btn-mini"} %><br />

 <%= link_to "Don't have an account?", new_user_registration_path,
 {:class => "btn btn-mini"} %><br />

</div>
